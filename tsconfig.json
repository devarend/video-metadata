{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts"
  ]
}
